{
    "name": "tech-scrappers/hrms-shared",
    "type": "library",
    "description": "HRMS Shared Components Package - Middleware, Services, Events, and Utilities",
    "keywords": ["hrms", "shared", "microservices", "laravel", "middleware"],
    "license": "MIT",
    "authors": [
        {
            "name": "Koraspond Team",
            "email": "tech@koraspond.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "predis/predis": "^3.2",
        "stancl/tenancy": "^3.9",
        "aws/aws-sdk-php": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Hrms\\Shared\\": "src/",
            "Shared\\": "src/"
        }
    },
    "scripts": {
        "cs-fix": "pint",
        "cs-check": "pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
