{
    "name": "hrms/shared",
    "type": "library",
    "description": "HRMS Shared Components Package - Middleware, Services, Events, and Utilities",
    "keywords": ["hrms", "shared", "microservices", "laravel", "middleware"],
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "HRMS Team",
            "email": "dev@hrms.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "predis/predis": "^3.2",
        "stancl/tenancy": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Hrms\\Shared\\": "src/",
            "Shared\\": "src/Shared/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "pint",
        "cs-check": "pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
